<div class="form-container">
<form method="post" action="/products/<%= @product.id %>">
  <input type="hidden" id="hidden" name="_method" value="PATCH">

  <div class="form-group">
  <label for="product[name]">Product Name:</label>
  <input type="text" id="product[name]" name="product[name]" value="<%= @product.name %>" class="form-control">
  </div>

  <div class="form-group">
  <label for="product[price]">Product Price:</label>
  <input type="text" id="product[price]" name="product[price]" value="<%= @product.price %>" class="form-control">
  </div>

  <div class="form-group">
  <label for="product[description]">Product Description:</label>
  <input type="textarea" id="product[description]" name="product[description]" value="<%= @product.description %>" class="form-control">
  </div>

  <input type="submit" value="Update Product">
</form>
</div>