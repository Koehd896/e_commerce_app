<% if @user.name == "" %>
<% greeting = @user.username %>
<% else %>
<% greeting = @user.name %>
<% end %>
<h2>Welcome, <%= greeting %>! Here are the products you have listed:</h2>

<div class="flex-container">
  <% @user.products.each do |product| %>
    <div class="flex-item">
        <% if product.image %>  
          <img src="<%= product.image %>" alt="<%= product.name %>">
        <% end %>
        <h4 class="card-title"><%= product.name %></h4>
        <hr>
        <strong>Product Description:</strong><br>
        <p class="card-text"><%= product.description %></p>
        <hr>
        <span><strong>Price: </strong>$<%= product.price %></span>
          <form method="post" action="/products/<%= product.id %>">
            <input type="hidden" id="hidden" name="_method" value="DELETE">
            <input type="submit" value="Delete Item" class="btn btn-primary" id="cart-button">
          </form>
  <a href="/products/<%= product.id %>/edit">edit product</a>

    </div>
  <% end %>
</div>

<div class="cart-footer">
  <div class="cart-footer-item">
    <a href="/"><button type="button" class="btn btn-primary link-button">Continue Shopping</button></a>
  </div>

  <div class="cart-footer-item">
    <form method="get" action="/products/new">
      <input type="submit" value="List New Product" class="btn btn-primary">
    </form>
  </div>



</div>

