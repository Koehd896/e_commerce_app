<div class="form-container">
<form method="post" action="/signup">

<div class="form-group">
<label for="user[name]">Your Name: (Optional)</label>
<input type="text" id="user[name]" name="user[name]" class="form-control">
</div>

<div class="form-group">
<label for="user[username]">Create Username:</label>
<input type="text" id="user[username]" name="user[username]" class="form-control">
<% if flash["username"] %>
 <span id="flash-message"><%= flash["username"] %></span>
<% end %>
<% if flash[:invalid_username] %>
 <span id="flash-message"><%= flash[:invalid_username] %></span>
<% end %>
</div>


<div class="form-group">
<label for="user[email]">Email Address:</label>
<input type="text" id="user[email]" name="user[email]" class="form-control">
<% if flash["email"] %>
 <span id="flash-message"><%= flash["email"] %></span>
<% end %>
<% if flash[:invalid_email] %>
 <span id="flash-message"><%= flash[:invalid_email] %></span>
<% end %>
</div>

<div class="form-group">
<label for="user[password]">Create Password:</label>
<input type="password" id="user[password]" name="user[password]" class="form-control">
<% if flash[:password] %>
 <span id="flash-message"><%= flash[:password] %></span>
<% end %>
</div>

<div class="form-group">
<label for="confirm_password">Confirm Password:</label>
<input type="password" id="confirm_password" name="confirm_password" class="form-control">
<% if flash[:confirm_password] %>
 <span id="flash-message"><%= flash[:confirm_password] %></span>
<% end %>
</div>

<input type="submit" value="Sign Up" class="btn btn-primary">
</form>
</div>