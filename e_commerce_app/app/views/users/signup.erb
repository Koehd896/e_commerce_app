<form method="post" action="/signup">

<label for="user[name]">Your Name: (Optional)</label>
<input type="text" id="user[name]" name="user[name]"><br>

<label for="user[username]">Create Username:</label>
<input type="text" id="user[username]" name="user[username]"><br>

<label for="user[email]">Email Address:</label>
<input type="text" id="user[email]" name="user[email]"><br>

<label for="user[password]">Create Password:</label>
<input type="text" id="user[password]" name="user[password]"><br>

<label for="confirm_password">Confirm Password:</label>
<input type="text" id="confirm_password" name="confirm_password"><br>

<input type="submit" value="Sign Up">
</form>