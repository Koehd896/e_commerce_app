<!DOCTYPE html>
<!--[if lt IE 7]> <html class="no-js ie6 oldie" lang="en"> <![endif]-->
<!--[if IE 7]>    <html class="no-js ie7 oldie" lang="en"> <![endif]-->
<!--[if IE 8]>    <html class="no-js ie8 oldie" lang="en"> <![endif]-->
<!--[if gt IE 8]><!--> <html class="no-js" lang="en"> <!--<![endif]-->
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1" />
    <link rel="shortcut icon" href="https://koehdecommerce.s3.us-east-2.amazonaws.com/favicon.ico" type="image/x-icon">

    <title>ECommerceApp</title>

    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="/stylesheets/main.css" />
  </head>
  <body>
    <nav class="navbar">
      <a class="navbar-brand" href="#" id="logo">
        <img src="https://koehdecommerce.s3.us-east-2.amazonaws.com/LogoMakr_2i6K6w.png" width="30" height="30" alt="e commerce logo">
      </a>
      <div class="container-fluid">
        <div class="navbar-header">
          <a class="navbar-brand" href="/">E Commerce</a>
        </div>
        <% if logged_in? %>
          <ul class="nav navbar-nav">
            <li>
              <a href="/users/<%= current_user.id %>">Profile</a>
              <div class="navbar-bottom-border"></div>
            </li>
          </ul>
        <% end %>
        <ul class="nav navbar-nav navbar-right">
          <form class="navbar-form navbar-left" method="post" action="/search">
            <div class="input-group">
              <input type="text" class="form-control" placeholder="Search" name="search">
              <div class="input-group-btn">
                <button class="btn btn-default" type="submit">
                  <i class="glyphicon glyphicon-search"></i>
                </button>
              </div>
            </div>
          </form>
          <% if logged_in? %>
              <li>
                <a href="/users/<%= current_user.id %>/cart"><span class="glyphicon glyphicon-shopping-cart"></span>Cart</a>
                <div class="navbar-bottom-border"></div>
              </li>
          <% end %>
          <% if logged_in? %>
            <li id="logout-navbar">
              <form class="logout-form" method="post" action="/logout">
                <span class="glyphicon glyphicon-log-out"></span>
                <input class="logout-button" type="submit" value="Log Out">
              </form>
            </li>
          <% else %>
            <li><a href="/login"><span class="glyphicon glyphicon-log-in"></span> Login</a></li>
            <li><a href="/signup"><span class="glyphicon glyphicon-user"></span> Sign Up</a></li>
          <% end %>
        </ul>
      </div>
    </nav>

    <div class="wrapper">
        <%= yield %>
    </div>

    <footer>
      <div>
        <small>&copy; 2020 <strong>ECommerceApp</strong></small>
      </div>
    </footer>

    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>
    <!--[if lt IE 7]>
      <script src="//ajax.googleapis.com/ajax/libs/chrome-frame/1.0.2/CFInstall.min.js"></script>
      <script>window.attachEvent("onload",function(){CFInstall.check({mode:"overlay"})})</script>
    <![endif]-->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
  </body>
</html>
